{
   "name": "fetch-json",
   "description": "A wrapper around Fetch just for JSON (written in TypeScript)",
   "version": "2.6.6",
   "license": "MIT",
   "type": "module",
   "module": "dist/fetch-json.js",
   "jsdelivr": "dist/fetch-json.min.js",
   "main": "dist/fetch-json.umd.cjs",
   "types": "dist/fetch-json.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/fetch-json.js",
         "require": "./dist/fetch-json.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/fetch-json",
   "homepage": "https://fetch-json.js.org",
   "bugs": "https://github.com/center-key/fetch-json/issues",
   "docs": "https://github.com/center-key/fetch-json#readme",
   "keywords": [
      "browser",
      "fetch",
      "fetch-json",
      "get",
      "http",
      "jamstack",
      "javascript",
      "json",
      "node-fetch",
      "post",
      "rest",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "nonbsp": false,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "mocha": true,
      "node": true,
      "globals": {
         "fetch": true,
         "globalThis": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:04": "tsc",
      "step:05": "tsc --module UMD --outDir build/umd",
      "step:06": "copy-file build/umd/fetch-json.js build/fetch-json.umd.cjs",
      "step:07": "esm-to-plain-js --cd=build fetch-json.js fetch-json.dev.js",
      "step:08": "uglifyjs build/fetch-json.dev.js --output build/fetch-json.min.js",
      "step:09": "add-dist-header build dist",
      "step:10": "html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js --timeout 5000 --retries 1",
      "examples": "node docs/js/examples.js && tsc && node build/docs/ts/examples.js"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.38",
      "@typescript-eslint/parser": "~5.38",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "canvas": "~2.10",
      "copy-file-util": "~0.1",
      "copy-folder-cli": "~0.1",
      "dna.js": "~2.0",
      "eslint": "~8.24",
      "esm-to-plain-js": "~0.0",
      "jquery": "~3.6",
      "jsdom": "~20.0",
      "jshint": "~2.13",
      "mocha": "~10.0",
      "node-fetch": "~3.2",
      "npm-run-all2": "~6.0",
      "promise-polyfill": "~8.2",
      "puppeteer": "~18.0",
      "puppeteer-browser-ready": "~0.5",
      "typescript": "~4.8",
      "uglify-js": "~3.17.2",
      "w3c-html-validator": "~1.1",
      "web-ignition": "~1.5",
      "whatwg-fetch": "~3.6"
   }
}
