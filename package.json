{
   "name": "fetch-json",
   "description": "A wrapper around Fetch just for JSON",
   "version": "3.2.1",
   "license": "MIT",
   "type": "module",
   "module": "dist/fetch-json.js",
   "jsdelivr": "dist/fetch-json.min.js",
   "main": "dist/fetch-json.umd.cjs",
   "types": "dist/fetch-json.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/fetch-json.js",
         "require": "./dist/fetch-json.umd.cjs"
      },
      "./": "./dist/"
   },
   "engines": {
      "node": ">=18"
   },
   "repository": "github:center-key/fetch-json",
   "homepage": "https://fetch-json.js.org",
   "bugs": "https://github.com/center-key/fetch-json/issues",
   "docs": "https://github.com/center-key/fetch-json#readme",
   "keywords": [
      "browser",
      "fetch",
      "fetch-json",
      "get",
      "http",
      "jamstack",
      "javascript",
      "json",
      "post",
      "rest",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "nonbsp": false,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "mocha": true,
      "node": true,
      "globals": {
         "fetch": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build dist"
      ],
      "lint": [
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts"
      ],
      "build": [
         "tsc",
         "tsc --module UMD --outDir build/umd",
         "copy-file build/umd/fetch-json.js build/fetch-json.umd.cjs",
         "esm-to-plain-js --cd=build fetch-json.js fetch-json.dev.js",
         "uglifyjs build/fetch-json.dev.js --output build/fetch-json.min.js"
      ],
      "dist": [
         "add-dist-header build dist",
         "html-validator"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean lint build dist",
      "test": "mocha spec/*.spec.js --timeout 7000",
      "examples": "node docs/js/examples.js",
      "dev": "tsc && node docs/js/dev.js",
      "interactive": "http-server -o spec/fixtures/"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.4",
      "@types/node": "~20.5",
      "@typescript-eslint/eslint-plugin": "~6.5",
      "@typescript-eslint/parser": "~6.5",
      "add-dist-header": "~1.2",
      "assert-deep-strict-equal": "~1.1",
      "copy-file-util": "~1.1",
      "copy-folder-util": "~1.1",
      "dna-engine": "~3.0",
      "eslint": "~8.48",
      "esm-to-plain-js": "~1.1",
      "http-server": "~14.1",
      "jsdom": "~22.1",
      "jshint": "~2.13",
      "mocha": "~10.2",
      "puppeteer": "~21.1",
      "puppeteer-browser-ready": "~1.2",
      "replacer-util": "~1.2",
      "rimraf": "~5.0",
      "run-scripts-util": "~1.2",
      "typescript": "~5.2",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.4",
      "web-ignition": "~2.0",
      "whatwg-fetch": "~3.6"
   }
}
