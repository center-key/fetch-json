{
   "name": "fetch-json",
   "description": "A wrapper around Fetch just for JSON (written in TypeScript)",
   "version": "2.7.0",
   "license": "MIT",
   "type": "module",
   "module": "dist/fetch-json.js",
   "jsdelivr": "dist/fetch-json.min.js",
   "main": "dist/fetch-json.umd.cjs",
   "types": "dist/fetch-json.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/fetch-json.js",
         "require": "./dist/fetch-json.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/fetch-json",
   "homepage": "https://fetch-json.js.org",
   "bugs": "https://github.com/center-key/fetch-json/issues",
   "docs": "https://github.com/center-key/fetch-json#readme",
   "keywords": [
      "browser",
      "fetch",
      "fetch-json",
      "get",
      "http",
      "jamstack",
      "javascript",
      "json",
      "node-fetch",
      "post",
      "rest",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "nonbsp": false,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "mocha": true,
      "node": true,
      "globals": {
         "fetch": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "build": [
         "rimraf build dist **/.DS_Store",
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc",
         "tsc --module UMD --outDir build/umd",
         "copy-file build/umd/fetch-json.js build/fetch-json.umd.cjs",
         "esm-to-plain-js --cd=build fetch-json.js fetch-json.dev.js",
         "uglifyjs build/fetch-json.dev.js --output build/fetch-json.min.js",
         "replacer build/fetch-json.js build --rename=fetch-json.browser.js --regex=/^import.*$/m",
         "add-dist-header build dist",
         "html-validator"
      ]
   },
   "scripts": {
      "pretest": "run-scripts build",
      "test": "mocha spec/*.spec.js --timeout 5000 --retries 1",
      "examples": "node docs/js/examples.js && tsc && node build/docs/ts/examples.js"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/node": "~18.11",
      "@typescript-eslint/eslint-plugin": "~5.41",
      "@typescript-eslint/parser": "~5.41",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "dna-engine": "~2.2",
      "eslint": "~8.26",
      "esm-to-plain-js": "~0.1",
      "jquery": "~3.6",
      "jsdom": "~20.0",
      "jshint": "~2.13",
      "mocha": "~10.1",
      "node-fetch": "~3.2",
      "promise-polyfill": "~8.2",
      "puppeteer": "~19.2",
      "puppeteer-browser-ready": "~0.5",
      "replacer-util": "~0.2",
      "run-scripts-util": "~0.1",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.2",
      "web-ignition": "~1.6",
      "whatwg-fetch": "~3.6"
   }
}
